      </li>
    </modExtensions>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <researchPrerequisites>
      <li>VWE_TrenchWarfare</li>
    </researchPrerequisites>
  </ThingDef>

