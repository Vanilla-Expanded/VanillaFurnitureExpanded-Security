<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Change ultra mechtech research prerequisite to beam weapons -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Odyssey</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="VFES_Complex_GraserCannon"]/researchPrerequisites/li[text()="UltraMechtech"]/text()</xpath>
      <value>BeamWeapons</value>
    </match>
  </Operation>

</Patch>